<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="signupPane" prefHeight="400.0" prefWidth="600.0" styleClass="signupPane" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.backrooms.backroom_messenger.MainPageController">
   <children>
      <Label fx:id="usernameLabel" layoutX="98.0" layoutY="127.0" styleClass="userLabel" text="User Name">
         <font>
            <Font name="Bodoni 72 Bold" size="21.0" />
         </font></Label>
      <Label fx:id="passwordLabel" layoutX="96.0" layoutY="182.0" styleClass="passLabel" text="Password">
         <font>
            <Font name="Kannada MN" size="21.0" />
         </font></Label>
      <TextField fx:id="Username" layoutX="210.0" layoutY="122.0" prefHeight="36.0" prefWidth="181.0" styleClass="username">
         <font>
            <Font name="Bodoni 72 Bold" size="13.0" />
         </font></TextField>
      <Label layoutX="171.0" layoutY="317.0" text="Already have an account?" textFill="#e6005e">
         <font>
            <Font name="Georgia" size="13.0" />
         </font></Label>
      <Button fx:id="loginLink" layoutX="318.0" layoutY="313.0" mnemonicParsing="false" onAction="#toLoginPage" styleClass="loginLink" text="Login">
         <font>
            <Font name="STSong" size="13.0" />
         </font></Button>
      <Button fx:id="signupButton" layoutX="255.0" layoutY="231.0" mnemonicParsing="false" onAction="#Enter" prefHeight="36.0" prefWidth="87.0" styleClass="signupButton" text="Sign Up">
         <font>
            <Font name="Luminari" size="13.0" />
         </font></Button>
      <PasswordField fx:id="Password" layoutX="208.0" layoutY="177.0" prefHeight="36.0" prefWidth="181.0" styleClass="password" />
      <Label fx:id="ErrorMessage" layoutX="187.0" layoutY="281.0" prefHeight="17.0" prefWidth="223.0" />
   </children>
</AnchorPane>
